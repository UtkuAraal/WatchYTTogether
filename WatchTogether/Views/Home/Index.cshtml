@{
    ViewData["Title"] = "Home Page";
}

 

  <!-- Hero Section -->
  <header class="hero bg-white text-center py-5">
  <div class="container">
    <h1 class="display-4">YouTube İzle</h1>
    <p class="lead">Birlikte videolar izlemek için en iyi platform</p>
    <a href="#" class="btn btn-primary btn-lg">Hemen Başla</a>
  </div>
</header>

  <!-- Features Section -->
  <section class="features py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="feature">
            <i class="fas fa-video fa-3x mb-3"></i>
            <h3 class="h5">Geniş Video Kütüphanesi</h3>
            <p>Binlerce video arasından istediğiniz içeriği keşfedin.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature">
            <i class="fas fa-users fa-3x mb-3"></i>
            <h3 class="h5">Birlikte İzleme</h3>
            <p>Arkadaşlarınızla veya ailenizle aynı anda video izleyin.</p>
          </div>
        </div>
         <div class="col-md-4">
          <div class="feature">
            <i class="fas fa-thumbs-up fa-3x mb-3"></i>
            <h3 class="h5">Beğeni Sistemi</h3>
            <p>Videoları beğenebilir ve favorilerinize ekleyebilirsiniz.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature">
            <i class="fas fa-search fa-3x mb-3"></i>
            <h3 class="h5">Arama Özelliği</h3>
            <p>İstediğiniz videoları hızlıca arayın ve bulun.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature">
            <i class="fas fa-star fa-3x mb-3"></i>
            <h3 class="h5">Popüler İçerikler</h3>
            <p>En popüler videoları keşfedin ve takip edin.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  

  <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
